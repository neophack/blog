<%- partial('_partial/header', {
    title: theme.navis_title,
    hdClass: 'navis-header'
}) %>
<div class="container body-wrap fade">
    <%- page.content.replace(/<h[0-3] /ig, function(word){
	return  word +'class="archive-separator" ';}
	).replace(/<p>%%%<\/p>/ig, '<div class="article-card" style="height:auto; min-height:120px;">'
	).replace(/<p>\/%%%<\/p>/ig, '<div style="clear:both;"></div></div>'
	).replace(/<p>.*?<\/p>/ig, function(word){
	return  '<div class="post-title" style="height:100px;width: 175px;float:left;color: #414141;padding-left: 10px;margin: 5px; box-shadow: 0 1px 2px rgba(151,151,151,0.18);">'+word+'</div>';}
	).replace(/<a /ig, function(word){
	return  word +'class="post-title-link" ';}
	); %>
   
    <%- partial('_partial/paginator') %>
</div>
